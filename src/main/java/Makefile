
define run_java_file
	@javac $(1).java && java $(1) && echo "Test $(1) passed!"
endef

define countAlgorithms
	expr `ls *.java | wc -l` - 2
endef

SearchInsertPosition:
	$(call run_java_file,SearchInsertPosition)

FindFirstAndLastPositionOfElementInSortedArray:
	$(call run_java_file,FindFirstAndLastPositionOfElementInSortedArray)

SearchInRotatedSortedArray:
	$(call run_java_file,SearchInRotatedSortedArray)

LongestValidParentheses:
	$(call run_java_file,LongestValidParentheses)

NextPermutation:
	$(call run_java_file,NextPermutation)

SubstringWithConcatenationOfAllWords:
	$(call run_java_file,SubstringWithConcatenationOfAllWords)

DivideTwoIntegers:
	$(call run_java_file,DivideTwoIntegers)

ImplementStrStr:
	$(call run_java_file,ImplementStrStr)

RemoveElement:
	$(call run_java_file,RemoveElement)

RemoveDuplicatesFromSortedArray:
	$(call run_java_file,RemoveDuplicatesFromSortedArray)

ReverseNodeInKGroup:
	$(call run_java_file,ReverseNodeInKGroup)

GenerateParentheses:
	$(call run_java_file,GenerateParentheses)

MergeTwoSortedLists:
	$(call run_java_file,MergeTwoSortedLists)

ValidParentheses:
	$(call run_java_file,ValidParentheses)

RemoveNthNodeFromEndOfList:
	$(call run_java_file,RemoveNthNodeFromEndOfList)

FourSum:
	$(call run_java_file,FourSum)

LetterCombinationsOfAPhoneNumber:
	$(call run_java_file,LetterCombinationsOfAPhoneNumber)

ThreeSumCloset:
	$(call run_java_file,ThreeSumCloset)

ThreeSum:
	$(call run_java_file,ThreeSum)

LongestCommonPrefix:
	$(call run_java_file,LongestCommonPrefix)

RomanToInteger:
	$(call run_java_file,RomanToInteger)

IntegerToRoman:
	$(call run_java_file,IntegerToRoman)

ContainerWithMostWater:
	$(call run_java_file,ContainerWithMostWater)

RegularExpressionMatching:
	$(call run_java_file,RegularExpressionMatching)

PalindromeNumber:
	$(call run_java_file,PalindromeNumber)

StringToInteger:
	$(call run_java_file,StringToInteger)

ReverseInteger:
	$(call run_java_file,ReverseInteger)

ZigZagConversion:
	$(call run_java_file,ZigZagConversion)

LongestPalindromicSubstring:
	$(call run_java_file,LongestPalindromicSubstring)

MedianOfTwoSortedArrays:
	$(call run_java_file,MedianOfTwoSortedArrays)

QuickSort:
	$(call run_java_file,QuickSort)

BinarySearch:
	$(call run_java_file,BinarySearch)

MergeKSortedLists:
	$(call run_java_file,MergeKSortedLists)

LinkedListCycle:
	$(call run_java_file,LinkedListCycle)

ReverseLinkedList:
	$(call run_java_file,ReverseLinkedList)

SwapNodesInPairs:
	$(call run_java_file,SwapNodesInPairs)

LongestSubstringWithoutRepeatingCharacters:
	$(call run_java_file,LongestSubstringWithoutRepeatingCharacters)

addTwoNumbers:
	$(call run_java_file,AddTwoNumbers)

twoSum:
	$(call run_java_file,TwoSum)

count:
	@$(call countAlgorithms)

clean:
	rm -rf *.class
